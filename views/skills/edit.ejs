<%- include('../partials/header') %>

    <form action="/skills/<%= skill.id %>?_method=PUT" method="POST" autocomplete="off">
        <input type="text" name="skill" value="<%= skill.skill %>" autofocus><br>
        <label>
            <input type="checkbox" name="acquired" <%= skill.acquired ? 'checked' : '' %>>
            Acquired
        </label><br>
        <button type="submit">Update Skill</button>
    </form>

